   "source": [
    "#importing the libraries\n",
    "import thunder as td\n",
    "import json\n",
    "from extraction import NMF"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [],
   "source": [
    "#getting individual test dataset\n",
    "folder_name = \"04.00.test\" \n",
    "#creating image vector of the dataset\n",
    "data = td.images.fromtif('/Users/vishakhaatole/Desktop/data/test/neurofinder.04.00.test/images', ext='tiff', engine = sc, npartitions= 8)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "metadata": {},
   "outputs": [],
   "source": [
    "#creating the NMF model\n",
    "nmf = NMF(k=5, percentile=95, max_iter=50, overlap=0.1)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 5,
   "metadata": {},
   "outputs": [],
   "source": [
    "#fitting the model\n",
    "model = nmf.fit(data, chunk_size=(100,100))\n",
    "merged = model.merge(overlap=0.1)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "#saving region coordinates\n",
    "region =[]\n",
    "for r in merged.regions:\n",
    "    region.append({\"coordinates\": (r.coordinates.tolist())})\n",
    "output = {'dataset': str(folder_name).strip(), 'regions': region}"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "with open('/Users/vishakhaatole/Desktop/p3Output/neurofinder.04.00.test.json','w') as outfile:\n",
    "    json.dump(output,outfile)\n",
    "with open('/Users/vishakhaatole/Desktop/p3Output/neurofinder.04.00.test.json') as infile:\n",
    "    json_file = json.load(infile)"
   ]
  }
